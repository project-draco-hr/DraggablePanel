{
  super.onViewReleased(releasedChild,xvel,yvel);
  if (!isDragViewAtBottom()) {
    if (isHeaderAboveTheMiddle()) {
      maximize();
    }
 else {
      minimize();
    }
  }
 else {
    if (isNextToLeftBound()) {
      closeToLeft();
    }
 else     if (isNextToRightBound()) {
      closeToRight();
    }
 else {
      minimize();
    }
  }
  notifyViewReleasedToListener(xvel,yvel);
}
